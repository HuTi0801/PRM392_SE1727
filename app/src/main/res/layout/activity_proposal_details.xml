<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/proposal_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Reusable Header -->
    <include
        android:id="@+id/include_header"
        layout="@layout/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Capstone Project"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        tools:ignore="HardcodedText"/>

    <!-- Project Status Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F5F5F5"
        android:elevation="2dp"
        android:layout_margin="8dp"
        android:clipToPadding="false"
        android:backgroundTint="#F5F5F5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Status"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="12dp"
            android:textColor="#000000"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/tv_proposal_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proposal Status: Approved"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/tv_assigned_lecturer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assigned Lecturer: Mr. Hoang Nguyen The"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comment: Your project has already been approved"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/tv_project_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Progress: 20%"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            tools:ignore="HardcodedText"/>

        <ProgressBar
            android:id="@+id/progress_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="20"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_marginTop="4dp" />

        <!-- Add Proposal Button -->
        <Button
            android:id="@+id/btn_add_proposal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Proposal"
            android:layout_marginTop="24dp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:textColor="#000000"
            android:textStyle="bold"
            android:visibility="gone"
            tools:ignore="HardcodedText" />

        <!-- Remove Proposal Button -->
        <Button
            android:id="@+id/btn_remove_proposal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remove Proposal"
            android:layout_marginTop="12dp"
            android:backgroundTint="@android:color/holo_red_light"
            android:textColor="#000000"
            android:textStyle="bold"
            android:visibility="gone"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</LinearLayout>