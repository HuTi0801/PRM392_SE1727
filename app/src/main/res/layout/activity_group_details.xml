<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_details"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Project Details Information"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            tools:ignore="HardcodedText"/>

        <!-- Member Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Member Information Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Member Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp"
                    tools:ignore="HardcodedText"/>

                <!-- Mentors Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Mentor Tags Container -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:ignore="UselessParent">

                        <!-- Mentor Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="start"
                            android:layout_marginBottom="8dp"
                            tools:ignore="UselessLeaf" />

                        <!-- Leader Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="start"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Leader Team"
                                android:background="@drawable/green_rounded_bg"
                                android:textColor="#FFFFFF"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp"
                                android:layout_marginEnd="8dp"
                                android:textSize="12sp"
                                tools:ignore="HardcodedText"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SE172562"
                                android:background="@drawable/green_rounded_bg"
                                android:textColor="#FFFFFF"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp"
                                android:layout_marginEnd="8dp"
                                android:textSize="12sp"
                                tools:ignore="HardcodedText"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bui Huu Tien"
                                android:background="@drawable/green_rounded_bg"
                                android:textColor="#FFFFFF"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp"
                                android:layout_marginEnd="8dp"
                                android:textSize="12sp"
                                tools:ignore="HardcodedText"/>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:text="Remove"
                                android:textSize="10sp"
                                android:textColor="#FFFFFF"
                                android:background="@drawable/gray_rounded_bg"
                                android:paddingHorizontal="8dp"
                                android:minWidth="48dp"
                                android:minHeight="48dp"
                                tools:ignore="HardcodedText,SmallSp"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- Member 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Member 2"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp"
                        tools:ignore="HardcodedText"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start|center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Student Code"
                            android:background="@drawable/orange_rounded_bg"
                            android:textColor="#FFFFFF"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:layout_marginEnd="8dp"
                            android:textSize="12sp"
                            tools:ignore="HardcodedText"/>

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:hint="Member Name"
                            android:textSize="12sp"
                            android:paddingHorizontal="8dp"
                            android:background="@drawable/edittext_bg"
                            android:layout_marginEnd="8dp"
                            android:maxWidth="200dp"
                            android:minWidth="48dp"
                            android:minHeight="48dp"
                            tools:ignore="Autofill,HardcodedText,TextFields"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="Add"
                            android:textSize="10sp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/green_rounded_bg"
                            android:paddingHorizontal="12dp"
                            android:minWidth="48dp"
                            android:minHeight="48dp"
                            tools:ignore="HardcodedText,SmallSp"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Member 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Member 3"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp"
                        tools:ignore="HardcodedText"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start|center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Student Code"
                            android:background="@drawable/orange_rounded_bg"
                            android:textColor="#FFFFFF"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:layout_marginEnd="8dp"
                            android:textSize="12sp"
                            tools:ignore="HardcodedText"/>

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:hint="Member Name"
                            android:textSize="12sp"
                            android:paddingHorizontal="8dp"
                            android:background="@drawable/edittext_bg"
                            android:layout_marginEnd="8dp"
                            android:maxWidth="200dp"
                            tools:ignore="Autofill,HardcodedText,TextFields"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="Add"
                            android:textSize="10sp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/green_rounded_bg"
                            android:paddingHorizontal="12dp"
                            android:minWidth="48dp"
                            android:minHeight="48dp"
                            tools:ignore="HardcodedText,SmallSp"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Member 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Member 4"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp"
                        tools:ignore="HardcodedText"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start|center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Student Code"
                            android:background="@drawable/orange_rounded_bg"
                            android:textColor="#FFFFFF"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:layout_marginEnd="8dp"
                            android:textSize="12sp"
                            tools:ignore="HardcodedText"/>

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:hint="Member Name"
                            android:textSize="12sp"
                            android:paddingHorizontal="8dp"
                            android:background="@drawable/edittext_bg"
                            android:layout_marginEnd="8dp"
                            android:maxWidth="200dp"
                            tools:ignore="Autofill,HardcodedText,TextFields"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="Add"
                            android:textSize="10sp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/green_rounded_bg"
                            android:paddingHorizontal="12dp"
                            android:minWidth="48dp"
                            android:minHeight="48dp"
                            tools:ignore="HardcodedText,SmallSp"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Member 5 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Member 5"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp"
                        tools:ignore="HardcodedText"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start|center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Student Code"
                            android:background="@drawable/orange_rounded_bg"
                            android:textColor="#FFFFFF"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:layout_marginEnd="8dp"
                            android:textSize="12sp"
                            tools:ignore="HardcodedText"/>

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:hint="Member Name"
                            android:textSize="12sp"
                            android:paddingHorizontal="8dp"
                            android:background="@drawable/edittext_bg"
                            android:layout_marginEnd="8dp"
                            android:maxWidth="200dp"
                            tools:ignore="Autofill,HardcodedText,TextFields"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="Add"
                            android:textSize="10sp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/green_rounded_bg"
                            android:paddingHorizontal="12dp"
                            android:minWidth="48dp"
                            android:minHeight="48dp"
                            tools:ignore="HardcodedText,SmallSp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>